<Window x:Class="MSCI_445_Lab2.Password_Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSCI_445_Lab2"
        mc:Ignorable="d"
        Title="Password_Input" Height="450" Width="800">
    <Grid>
        <Label Content="Enter your password please" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="172,130,0,0" Width="173"/>

        <PasswordBox x:Name="password1" PasswordBox.PasswordChar ="* "  HorizontalAlignment="Left" Height="20" Margin="380,135,0,0" VerticalAlignment="Top" Width="215"/>
        <Button Content="Send" HorizontalAlignment="Left" Height="25" Margin="290,210,0,0" VerticalAlignment="Top" Width="135" Click="Button_Click"/>

    </Grid>
</Window>
